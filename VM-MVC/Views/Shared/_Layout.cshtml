<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Content/mysheet.css" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
</head>

<body>
    <div class="page">
        <div id="MainMenu">
            <div id="tab">
                <ul class="menu">
                    <li class="item_active" id="menu1">
                        <img src="@Url.Content("~/Content/Images/home.png")" alt="" class="icon" />
                        <a href="@Url.RouteUrl("Home")"><span>主页</span></a>
                    </li>
                    <li id="menu2">
                        <img src="@Url.Content("~/Content/Images/members.png")" alt="" class="icon" />
                        @if (ViewBag.IsLogin == true)
                        {
                            <a href="@Url.RouteUrl("Logout")"><span>注销</span></a>
                        }
                        else
                        {
                            <a href="@Url.RouteUrl("Login")"><span>登陆</span></a>
                        }
                    </li>
                    <li id="menu3">
                        <span>
                            <img src="@Url.Content("~/Content/Images/cart.png")" alt="" class="icon" />
                            <a href="@Url.RouteUrl("ShoppingCart")"><span>购物车</span></a>
                        </span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main">@RenderBody()</div>
    </div>
    <div class="footer">
        <span><a href="mailto:123@163.com" target="_blank">联系作者</a></span>
        <span>|</span>
        <span><a href="mailto:123@163.com" target="_blank">技术博客</a></span>
        <span>|</span>
        <span><a href="mailto:123@163.com" target="_blank">新浪微博</a></span>
        <span>|</span>
        <span class="copyRight">©2019 Boone</span>
    </div>
    <script>
        var index = 0;
        if (document.URL.indexOf("ShoppingCart") != -1) {
            index = 2;
        }
        else if (document.URL.indexOf("Login") != -1 || document.URL.indexOf("Logout") != -1) {
            index = 1;
        }
        else {
            index = 0;
        }
        var eleMenu = document.getElementsByClassName("menu");
        var li = eleMenu[0].getElementsByTagName("li");
        for (var i = 0; i < li.length; i++) {
            if (i == index) {
                li[i].className = "item_active";
            }
            else {
                li[i].className = "";
            }
        }
    </script>
</body>
</html>